{
  "name": "setup-helmfile",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Action to setup Helmfile.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map",
    "start": "yarn run build && node lib/main.js",
    "test": "jest",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitabisa/actions.git"
  },
  "keywords": [
    "actions",
    "setup",
    "helm",
    "helmfile"
  ],
  "author": "kitabisa",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/node": "^14.14.22",
    "@typescript-eslint/parser": "^4.1.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.6.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.0.1",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-circus": "^26.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  }
}
